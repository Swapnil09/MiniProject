<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DCDCDC"
        android:orientation="vertical"
        android:padding="10dp"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example1"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="10dp">


                <TextView
                    android:id="@+id/developer_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEEPAK AWAL"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="25dp"
                    android:textColor="#000" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example2"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="10dp">


                <TextView
                    android:id="@+id/developer_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADITYA DHOPADE"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="25dp"
                    android:textColor="#000"
                    />




            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example3"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="10dp">


                <TextView
                    android:id="@+id/developer_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SWAPNIL GADE"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="25dp"
                    android:textColor="#000"
                    />



            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example4"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="10dp">


                <TextView
                    android:id="@+id/developer_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOKESH ALLI"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:textSize="25dp"
                    android:textColor="#000"
                />

              
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/android_card_view_example5"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="90dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="10dp">


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Send email for queries"
                    android:textSize="20dp"
                    android:textColor="#000"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email"
                    android:layout_toRightOf="@+id/email"
                    android:padding="15dp"
                    android:id="@+id/email_icon"
                    android:onClick="sendMail"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="#d20b0d"
        app:itemTextColor="#333"
        app:headerLayout="@layout/navigation_header_layout"
        app:menu="@menu/navigation_items" />
</android.support.v4.widget.DrawerLayout>